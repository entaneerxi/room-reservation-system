@model IEnumerable<RoomReservationSystem.Models.Facility>
@{
    ViewData["Title"] = "สิ่งอำนวยความสะดวก";
}

<h2 class="mb-4">
    <i class="fas fa-concierge-bell"></i> สิ่งอำนวยความสะดวก
</h2>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var facility in Model)
        {
            <div class="col-md-4 col-lg-3 mb-4">
                <div class="card h-100 shadow-sm text-center">
                    @if (!string.IsNullOrEmpty(facility.ImageUrl))
                    {
                        <img src="@facility.ImageUrl" class="card-img-top" alt="@facility.Name" style="height: 200px; object-fit: cover;">
                    }
                    else if (!string.IsNullOrEmpty(facility.IconClass))
                    {
                        <div class="card-body">
                            <i class="@facility.IconClass fa-4x text-primary mb-3"></i>
                        </div>
                    }
                    <div class="card-body">
                        <h5 class="card-title">@facility.Name</h5>
                        @if (!string.IsNullOrEmpty(facility.Description))
                        {
                            <p class="card-text text-muted">@facility.Description</p>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> ข้อมูลสิ่งอำนวยความสะดวกกำลังอัปเดต
    </div>
}
