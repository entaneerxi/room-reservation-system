@model IEnumerable<RoomReservationSystem.Models.Room>
@{
    ViewData["Title"] = "จองห้องพัก";
}

<h2 class="mb-4">
    <i class="fas fa-calendar-alt"></i> จองห้องพัก
</h2>

<div class="row">
    @if (Model != null && Model.Any())
    {
        @foreach (var room in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrEmpty(room.ImageUrl))
                    {
                        <img src="@room.ImageUrl" class="card-img-top" alt="@room.Name" style="height: 250px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="bg-secondary text-white text-center py-5" style="height: 250px;">
                            <i class="fas fa-bed fa-4x"></i>
                            <p class="mt-2">ไม่มีรูปภาพ</p>
                        </div>
                    }
                    <div class="card-body">
                        <h5 class="card-title">@room.Name</h5>
                        <p class="card-text">@room.Description</p>
                        <p class="text-muted">
                            <i class="fas fa-users"></i> รองรับ @room.Capacity คน
                        </p>
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div>
                                <small class="text-muted">รายวัน</small><br>
                                <strong class="text-primary">@room.DailyRate.ToString("N0") บาท</strong>
                            </div>
                            <div>
                                <small class="text-muted">รายเดือน</small><br>
                                <strong class="text-success">@room.MonthlyRate.ToString("N0") บาท</strong>
                            </div>
                        </div>
                        <div class="d-grid gap-2">
                            <a asp-action="Details" asp-route-id="@room.Id" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-info-circle"></i> ดูรายละเอียด
                            </a>
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                <a asp-action="Create" asp-route-roomId="@room.Id" class="btn btn-primary btn-sm">
                                    <i class="fas fa-calendar-check"></i> จองเลย
                                </a>
                            }
                            else
                            {
                                <a asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Url.Action("Create", new { roomId = room.Id })" class="btn btn-primary btn-sm">
                                    <i class="fas fa-sign-in-alt"></i> เข้าสู่ระบบเพื่อจอง
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> ขณะนี้ไม่มีห้องพักว่าง
            </div>
        </div>
    }
</div>
