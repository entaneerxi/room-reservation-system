<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Admin Panel</title>
    
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/css/adminlte.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>
            
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link" target="_blank">
                        <i class="fas fa-external-link-alt"></i> เว็บไซต์
                    </a>
                </li>
                <li class="nav-item">
                    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="nav-link btn btn-link">
                            <i class="fas fa-sign-out-alt"></i> ออกจากระบบ
                        </button>
                    </form>
                </li>
            </ul>
        </nav>
        
        <!-- Main Sidebar -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="brand-link">
                <i class="fas fa-hotel brand-image"></i>
                <span class="brand-text font-weight-light">ระบบจัดการ</span>
            </a>
            
            <div class="sidebar">
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu">
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>แดชบอร์ด</p>
                            </a>
                        </li>
                        
                        <li class="nav-header">การจัดการการจอง</li>
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Bookings" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-calendar-check"></i>
                                <p>ข้อมูลการจอง</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="MonthlyRentals" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-home"></i>
                                <p>ข้อมูลการเช่ารายเดือน</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="UtilityBills" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-file-invoice-dollar"></i>
                                <p>ค่าน้ำค่าไฟ</p>
                            </a>
                        </li>
                        
                        <li class="nav-header">จัดการข้อมูล</li>
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Rooms" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-bed"></i>
                                <p>จัดการห้องพัก</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Promotions" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-tags"></i>
                                <p>จัดการโปรโมชั่น</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Facilities" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-concierge-bell"></i>
                                <p>สิ่งอำนวยความสะดวก</p>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>
        
        <!-- Content Wrapper -->
        <div class="content-wrapper">
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0">@ViewData["Title"]</h1>
                        </div>
                    </div>
                </div>
            </div>
            
            <section class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </section>
        </div>
        
        <!-- Footer -->
        <footer class="main-footer">
            <strong>Copyright &copy; 2025 ระบบจองห้องพัก.</strong> All rights reserved.
        </footer>
    </div>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/js/adminlte.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
    @if (TempData["Success"] != null)
    {
        <script>
            Swal.fire({
                icon: 'success',
                title: 'สำเร็จ!',
                text: '@TempData["Success"]',
                confirmButtonText: 'ตกลง'
            });
        </script>
    }
    @if (TempData["Error"] != null)
    {
        <script>
            Swal.fire({
                icon: 'error',
                title: 'เกิดข้อผิดพลาด!',
                text: '@TempData["Error"]',
                confirmButtonText: 'ตกลง'
            });
        </script>
    }
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
