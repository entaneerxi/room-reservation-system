@model IEnumerable<RoomReservationSystem.Models.Booking>
@{
    ViewData["Title"] = "แดชบอร์ด";
}

<div class="row">
    <div class="col-lg-3 col-6">
        <div class="small-box bg-info">
            <div class="inner">
                <h3>@ViewBag.TotalRooms</h3>
                <p>ห้องพักทั้งหมด</p>
            </div>
            <div class="icon">
                <i class="fas fa-bed"></i>
            </div>
        </div>
    </div>
    
    <div class="col-lg-3 col-6">
        <div class="small-box bg-success">
            <div class="inner">
                <h3>@ViewBag.AvailableRooms</h3>
                <p>ห้องว่าง</p>
            </div>
            <div class="icon">
                <i class="fas fa-check-circle"></i>
            </div>
        </div>
    </div>
    
    <div class="col-lg-3 col-6">
        <div class="small-box bg-warning">
            <div class="inner">
                <h3>@ViewBag.PendingBookings</h3>
                <p>การจองรอดำเนินการ</p>
            </div>
            <div class="icon">
                <i class="fas fa-clock"></i>
            </div>
        </div>
    </div>
    
    <div class="col-lg-3 col-6">
        <div class="small-box bg-danger">
            <div class="inner">
                <h3>@ViewBag.ActiveRentals</h3>
                <p>การเช่ารายเดือน</p>
            </div>
            <div class="icon">
                <i class="fas fa-home"></i>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">การจองล่าสุด</h3>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>ลูกค้า</th>
                            <th>ห้องพัก</th>
                            <th>วันเข้าพัก</th>
                            <th>สถานะ</th>
                            <th>ยอดเงิน</th>
                            <th>จัดการ</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var booking in Model)
                            {
                                <tr>
                                    <td>#@booking.Id</td>
                                    <td>@booking.User?.FirstName @booking.User?.LastName</td>
                                    <td>@booking.Room?.Name</td>
                                    <td>@booking.CheckInDate.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        @switch (booking.Status)
                                        {
                                            case "Pending":
                                                <span class="badge badge-warning">รอดำเนินการ</span>
                                                break;
                                            case "Confirmed":
                                                <span class="badge badge-primary">ยืนยันแล้ว</span>
                                                break;
                                            case "CheckedIn":
                                                <span class="badge badge-success">เช็คอินแล้ว</span>
                                                break;
                                            case "CheckedOut":
                                                <span class="badge badge-secondary">เช็คเอาท์แล้ว</span>
                                                break;
                                            case "Cancelled":
                                                <span class="badge badge-danger">ยกเลิก</span>
                                                break;
                                        }
                                    </td>
                                    <td>@booking.TotalAmount.ToString("N0") บาท</td>
                                    <td>
                                        <a asp-controller="Bookings" asp-action="Details" asp-route-id="@booking.Id" class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center">ไม่มีข้อมูล</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
